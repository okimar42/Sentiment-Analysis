# Enable package-lock for reproducible builds (required for npm ci)
package-lock=true

# Use npm ci for faster, reliable, reproducible builds
prefer-offline=true
prefer-dedupe=true

# Disable funding messages to reduce noise
fund=false

# Disable audit for faster installs (can be enabled when needed)
audit=false

# Set cache location
cache=/tmp/.npm

# Disable update notifier
update-notifier=false

# Progress configuration
progress=true